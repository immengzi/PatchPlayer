<UserControl x:Class="Recommend_Sys.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Recommend_Sys.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewModels="clr-namespace:Recommend_Sys.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:HomePageViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <hc:SearchBar HorizontalAlignment="Center"
                      Command="{Binding SearchSongCommand}"
                      CommandParameter="{Binding Text,RelativeSource={RelativeSource Self}}"
                      hc:InfoElement.Placeholder="hi"
                      hc:TitleElement.Title="请输入歌曲名称："
                      hc:TitleElement.TitlePlacement="Left"
                      Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"
        />
            <ListView d:ItemsSource="{Binding SongList}" Margin="0,80,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" Header="歌曲" DisplayMemberBinding="{Binding Song}"/>
                        <GridViewColumn Width="100" Header="歌手" DisplayMemberBinding="{Binding Singer}"/>
                        <GridViewColumn Width="200" Header="专辑" DisplayMemberBinding="{Binding Album}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
</UserControl>