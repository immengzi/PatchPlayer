<UserControl x:Class="Recommend_Sys.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Recommend_Sys.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewModels="clr-namespace:Recommend_Sys.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:HomePageViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Grid HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBox Text="{Binding Text}"  TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Margin="20,0,60,0"/>
            <Button Content="搜" Command="{Binding SearchSongCommand}" VerticalAlignment="Top" Width="40" HorizontalAlignment="Left" Margin="340,0,0,0"/>
        </Grid>

        <ListView x:Name="SongListView" ItemsSource="{Binding Songs}" Margin="0,80,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="歌名" DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Width="100" Header="歌手" DisplayMemberBinding="{Binding artist_name}"/>
                    <GridViewColumn Width="100" Header="专辑" DisplayMemberBinding="{Binding album_name}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>